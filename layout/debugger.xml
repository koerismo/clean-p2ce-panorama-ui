<root>
	<styles>		
		<include src="file://{resources}/styles/debugger.sass" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/debugger.js" />
	</scripts>
	
	<Debugger>
		<Panel class="DebugToolbar">
			<Button id="InspectButton" class="ToolbarButton"><Label text="#UI_Inspect" /></Button>
			<ToggleButton id="DevInfo" class="ToolbarButton"><Label text="#Debugger_DevInfo" /></ToggleButton>
			<Button id="PaintInfo" class="ToolbarButton"><Label text="#Debugger_PaintInfo" /></Button>
			<!-- <Button id="ToggleTheme" onactivate="Debugger.toggleTheme()"><Label text="#Debugger_ToggleTheme" /></Button> -->
			
			<!-- TODO: Remove these from the game. -->
			<Panel id="InMemoryButtons">
				<Button id="RevertButton">
					<Label text="#Debugger_Revert" />
				</Button>
				<Button id="SaveButton">
					<Label text="#Debugger_Save" />
				</Button>
			</Panel>

		</Panel>
		<DebugPanelParents id="DebugPanelParents" />
		<Panel class="DebugBody">
			<Panel class="DebugBodyTop">
				<DebugLayout id="DebugLayout" />
				<VerticalSplitter />
				<DebugPanel id="DebugPanel" />
			</Panel>

			<!-- <HorizontalSplitter /> -->

			<Panel class="DebugJSConsole">
				<Label allowrawtext="true" id="JSConsoleText" />
				<TextEntry id="JSConsoleInput" onmoveup="UpdateJSConsolePriorHistory()" onmovedown="UpdateJSConsoleNextHistory()" />
			</Panel>
		</Panel>
	</Debugger>	
</root>
